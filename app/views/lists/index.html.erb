<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h1>Save any kind of movies</h1>
    <h3 class="typed-js" data-controller="typed-js"></h3>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Lists</h3>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-flat" %>
  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-4">
        <div class="card" style="width: 18rem;">
          <img src="https://images.unsplash.com/photo-1489599849927-2ee91cede3ba" class="card-img-top" alt="somrthing">
          <div class="card-body">
          <%= link_to list_path(list), class:"text-decoration-none" do %>
            <h5 class="card-title"><%= list.name %></h5>
            <% end %>
            <a href="#" class="btn btn-primary">Go somewhere</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
